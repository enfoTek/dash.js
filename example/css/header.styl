.branding, .username, .orgname
  display:  inline-block
  height:   100%
  padding:  .8em
  position: relative

.branding
  .logo
    width: 1.5em

    & + *
      position: relative
      top: -.4em
      left: .4em

.username, .orgname
  padding: .8em 1.2em
  float: right

  span
    position:   relative
    top:        .25em

.username

  .avatar
    width: 1.5em
    border-radius: 50%

  span
    top: -.4em
    padding: 0 0 0 .4em


