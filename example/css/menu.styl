menuTitlePadding    = 40px
menuSectionHeight   = 60px
menuMinWidth        = 250px
menuMaxItemsHeight  = 365px
menuZIndex          = 1000

.menu
  display: none
  position: absolute
  top: 100%
  right: 0
  min-width: menuMinWidth
  overflow-y: auto
  box-shadow: .1em .5em 1em dropShadowColor
  z-index: menuZIndex

  .menu-title
    font-size: 1.2em
    padding: 0 menuTitlePadding
    height: menuSectionHeight
    white-space: nowrap
    text-align: center
    line-height: 3em

  ul
    max-height: menuMaxItemsHeight
    > .no-results
      cursor: default

.menu-toggle
  display: none

  &:checked
    & + *
      .menu
        display: block
  & + *
    cursor: pointer

    > *
      cursor: default
