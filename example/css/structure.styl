headerHeight    = 4rem
footerHeight    = 3rem
navWidth        = 15rem

header
footer
nav
section
  border: 1px solid black

//
// Structural Elements:
//

header
footer
nav
section
  box-sizing:   border-box
  transition:   all 0.2s ease-in-out
  padding:      1rem

header
footer
  width:    100%
  position: fixed

//
// Header:
// `header` - Fixed Top Header Bar
//

header
  height:   headerHeight
  top:      0

//
// Footer:
// `footer` - Fixed Bottom Footer Bar
//

footer
  height:   footerHeight
  bottom:   0

//
// Navigation
// `nav` - Collapsible Left Menu Bar
//

body
  position: relative

nav
  width:    navWidth
  position: absolute
  left:     0
  top:      headerHeight
  bottom:   footerHeight
  overflow: scroll

  ul
    list-style-type: none
    padding: 0

    li
      cursor: pointer

body.collapsed
  nav
    left: -navWidth

//
// Navigation
// `section` - Main Content Section
//

section
  top:      4rem
  bottom:   3rem
  left:     15rem
  position: absolute
  right:    0
  overflow: scroll

body.collapsed
  section
    margin-left: 0
